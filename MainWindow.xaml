                </Style>
            </Button.Resources>
        </Button>
        -->
        <Button x:Name="ButtonMatchID" Content="Match ID" Margin="10,10,0,10" BorderThickness="3" HorizontalAlignment="Left" Width="62" Click="ButtonMatchID_Click" BorderBrush="white" FontWeight="Bold" Background="#FF474747" Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="ButtonClose" Content="Close" Margin="0,10,10,10" BorderThickness="3" HorizontalAlignment="Right" Width="62" Click="ButtonClose_Click" BorderBrush="white" FontWeight="Bold" Background="#FF761010" Foreground="White" Grid.Column="2">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="ButtonNight" Content="Night" Margin="144,10,0,10" BorderThickness="3" HorizontalAlignment="Left" Width="62" Click="ButtonNight_Click" BorderBrush="white" FontWeight="Bold" Background="#FF474747" Foreground="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="ButtonSoccer" Content="Soccer" Margin="278,10,0,10" BorderThickness="3" HorizontalAlignment="Left" Width="62" Click="ButtonSoccer_Click" BorderBrush="white" FontWeight="Bold" Background="#FF474747" Foreground="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="ButtonTeleport" Content="Teleport" Margin="77,10,0,10" BorderThickness="3" HorizontalAlignment="Left" Width="62" Click="ButtonTeleport_Click" BorderBrush="white" FontWeight="Bold" Background="#FF474747" Foreground="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="ButtonGas" Content="Gas" Margin="211,10,0,10" BorderThickness="3" HorizontalAlignment="Left" Width="62" Click="ButtonGas_Click" BorderBrush="white" FontWeight="Bold" Background="#FF474747" Foreground="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="ButtonStart" Content="Start" Margin="0,10,77,10" BorderThickness="3" HorizontalAlignment="Right" Width="62" Click="ButtonStart_Click" BorderBrush="white" FontWeight="Bold" Background="#FF2B7435" Foreground="White" Grid.Column="2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <CheckBox x:Name="CheckBoxAddBots" Content="Add Bots" HorizontalAlignment="Right" Margin="0,10,10,38" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Grid.Column="1" Height="16" Width="72"/>
        <Button x:Name="ButtonScenario" Content="Scenario" Margin="0,10,144,10" BorderThickness="3" HorizontalAlignment="Right" Width="62" Click="ButtonScenario_Click" BorderBrush="white" FontWeight="Bold" Background="#FF474747" Foreground="White" Grid.Column="2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Slider x:Name="SliderGasSpeed" HorizontalAlignment="Left" Margin="93,10,0,0" VerticalAlignment="Top" Width="84" Grid.Column="1" Height="18" Thumb.DragCompleted="SliderGasSpeed_DragCompleted" Value="1" Minimum="0.4" Maximum="3"/>
        <Slider x:Name="SliderGasDamage" HorizontalAlignment="Left" Margin="93,0,0,10" Width="84" Height="18" VerticalAlignment="Bottom" Grid.Column="1" Thumb.DragCompleted="SliderGasDamage_DragCompleted" Minimum="1" Value="1"/>
        <Label Content="Gas Speed:" Margin="15,7,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Left" Width="70" Grid.Column="1" Height="26"/>
        <Label Content="Gas Damage:" Margin="9,0,0,7" FontWeight="Bold" HorizontalAlignment="Left" Width="82" VerticalAlignment="Bottom" Grid.Column="1" Height="26"/>


    </Grid>
</Window>
